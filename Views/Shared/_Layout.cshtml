@{
    var title = ViewData["Title"] as string ?? "Municipal Services";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Municipal Services</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- ✅ Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Municipal Services</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Issues" ? "active" : "")"
                           asp-controller="Issues" asp-action="Report">Report Issue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Events" ? "active" : "")"
                           asp-controller="Events" asp-action="Index">Local Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Status" ? "active" : "")"
                           asp-controller="Status" asp-action="Index">Service Status</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @if (currentController == "Home" && currentAction == "Index")
        {
            <section class="text-center my-4">
                <h1 class="display-4 text-primary">Welcome to Municipal Services</h1>
                <p class="lead">
                    Empowering our community through efficient reporting, transparent updates, and local engagement.
                </p>
                <p>
                    Use the navigation bar above to report issues, explore local events, or check service request statuses.
                </p>
            </section>
        }

        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-4 border-top">
        <small>&copy; @DateTime.Now.Year Municipal Services</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>