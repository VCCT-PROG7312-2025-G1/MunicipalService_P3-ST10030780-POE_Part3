@model MunicipalService_P3.Models.ServiceRequest

<h2>Create New Service Request</h2>

<form asp-action="Insert" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Request ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Priority" class="form-label">Priority (0–10)</label>
        <input asp-for="Priority" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}