<!-- Views/Events/Index.cshtml -->
@model List<MunicipalService_P3.Models.Event>
@{
    ViewData["Title"] = "Events";
    Layout = "_Layout";
    var categories = ViewBag.Categories as List<string>;
    var recs = ViewBag.Recommendations as List<MunicipalService_P3.Models.Event>;
}
<h2>Upcoming Events</h2>
<form method="get" class="mb-3">
    <input type="text" name="keyword" placeholder="Search..." class="form-control mb-2" />
    <select name="category" class="form-select mb-2">
        <option value="">All Categories</option>
        @if (categories != null)
        {
            foreach (var cat in categories)
            {
                <option>@cat</option>
            }
        }
    </select>
    <input type="date" name="date" class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model?.Any() == true)
{
    <ul class="list-group">
        @foreach (var ev in Model)
        {
            <li class="list-group-item">
                <strong>@ev.Title</strong> <span class="text-muted">(@ev.Category)</span><br />
                <small>@ev.EventDate.ToShortDateString() — @ev.Location</small><br />
                <em>@ev.Description</em>
            </li>
        }
    </ul>
}
else
{

    <p class="text-warning">No events found.</p>
}

@if (recs?.Any() == true)
{
    <h3 class="mt-3">Recommended</h3>
    <ul>
        @foreach (var r in recs)
        {
            <li>@r.Title — @r.EventDate.ToShortDateString() (@r.Category)</li>
        }
    </ul>
}